@model IEnumerable<QinMilitary.Models.Soldier>

@{
    ViewData["Title"] = "Soldiers";
}

<h1>Soldiers</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Birthplace)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Birthplace)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.SoldierID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.SoldierID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.SoldierID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
